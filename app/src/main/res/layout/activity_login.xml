<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/b2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/passLogin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="跳过登录>"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/user_icon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TabLayout_Icon_User"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/user_et"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:cursorVisible="false"
                android:hint="@string/User_EditText"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="5dp"
            android:background="#939393" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/psw_icon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_Icon"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@null"
                android:cursorVisible="false"
                android:textCursorDrawable="@null"
                android:hint="@string/Password_EditText"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/eye_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/look_password_Icon"
                android:paddingRight="5dp"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_bg"
            android:text="@string/Login_button"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forgetPsw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgetPsw_TextView"
                android:textColor="#0081f9"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_TextView"
                android:textColor="#0081f9"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>