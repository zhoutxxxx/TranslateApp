                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="满99减50 , 满199减100"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/more_goods_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:text="@string/more_goods_Label"
                        android:textColor="@android:color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_soft" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/feedBack_goods_Label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/feedBack_goods_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="下单即可获得15积分"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/more2_goods_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:text="@string/more_goods_Label"
                        android:textColor="@android:color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_soft" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/whiteBar_goods_Label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/whiteBar_goods_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="【白条免息】 3期免息，6期手续费0.3/月，12期手续费1/月"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/more3_goods_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:text="@string/more_goods_Label"
                        android:textColor="@android:color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/gray_soft_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/selected_goods_Label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/select_goods_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="魅族16th , 6+64G , 远山白 1件"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/more4_goods_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:text="@string/more_goods_Label"
                        android:textColor="@android:color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/gray_soft_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/arrived_goods_Label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/arrived_goods_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="珠海市香洲区唐家湾镇金凤路18号北京师范大学珠海分校燕华7栋"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/more5_goods_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:text="@string/more_goods_Label"
                        android:textColor="@android:color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/weight_goods_Label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/weight_goods_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="0.142"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="KG"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/state_goods_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
            <!--评论-->
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/gray_soft_bg"/>
            <LinearLayout
                android:id="@+id/text_Linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_White"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@color/bg_White"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="6dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remark_goods_Label"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="2dp"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/remarkSum_tv_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1745)"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="3dp"
                        android:textStyle="bold"
                        android:textSize="14dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/goodRate_tv_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98%"
