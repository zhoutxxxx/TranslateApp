                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good_remark_rate"
                        android:textSize="14dp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/goodRemark_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/right_goods_Icon"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/gray_soft"
                    android:layout_marginLeft="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/bg_White">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/user" />

                        <TextView
                            android:id="@+id/custom_goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:text="a***7" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/custom_goods_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textColor="@android:color/black"
                        android:text="写下关于小米8和魅族16的对比吧！外观来讲手感都不错，小米8略重，大一圈，背部玻璃更白一点。魅族则保留3.5耳机孔，对称设计，无刘海，立体声上下双喇叭。屏幕显示效果一样出色，小米稍微黄一点点。跑分上魅族略好一点，跑分速度更快，但是跑完分之后手机左上角发热比小米8大。"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/custom_goods_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="2018-07-17 18:34:16"/>
