<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/back_Icon"
            android:textColor="@color/soft_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/title_promotion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="爱·生·活"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/share_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="@string/share_Icon"
            android:textColor="@color/soft_black"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gray_soft_bg" />

    <android.support.design.widget.TabLayout
        android:id="@+id/Promotion_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="3dp"
        android:background="@color/bg_White"
        style="@style/TabLayoutTextSize"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="@color/gray_navigation_bar"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/Promotion_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_White"></android.support.v4.view.ViewPager>
</LinearLayout>                                                                                                                                                                                                                                                                                                                                                                                                                                    